{% if block.galleryType == 'grid' %}

    {% if block.gallery|length %}
    <div class="col-xs-12">
        <div class="gallery-grid">
            <div class="row">
            {% for image in block.gallery %}
                <div class="col-md-3">
                    <a href="{{ image.url }}" title="{{ image.title }}" rel="gallery-{{ block.id }}">
                        <img src="{{ image.url }}">
                    </a>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

{% elseif block.galleryType == 'slider' %}

    {% if block.gallery|length %}
    <div class="col-xs-12">
        <div class="gallery-slider row">
        {% for image in block.gallery %}
            <div>
                <a href="{{ image.url }}" title="{{ image.title }}">
                    <img src="{{ image.url }}">
                </a>
            </div>
        {% endfor %}
        </div>
    </div>
    {% endif %}

{% elseif block.galleryType == 'sliderWithPreview' %}

    {% if block.gallery|length %}
        <div class="col-xs-12">
            <div class="gallery-slider-top">
                {% for image in block.gallery %}
                    <div>
                        <a href="{{ image.url }}" title="{{ image.title }}">
                            <img src="{{ image.url }}">
                        </a>
                    </div>
                {% endfor %}
            </div>
            <div class="gallery-slider-bottom">
                {% for image in block.gallery %}
                    <div>
                        <a href="{{ image.url }}" title="{{ image.title }}">
                            <img src="{{ image.url }}">
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

{% elseif block.galleryType == 'pinterest' %}

    {% if block.gallery|length %}
            <div class="gallery-pinterest" {% if craft.mobileDetect.isPhone %}data-gridify="1-columns"{% elseif craft.mobileDetect.isTablet %}data-gridify="2-columns"{% else %}data-gridify="3-columns"{% endif %}>
                {% for image in block.gallery %}
                    <div class="pinterest-item">
                        <a href="{{ image.url }}" title="{{ image.title }}">
                            <img src="{{ image.url }}">
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

{% endif %}
